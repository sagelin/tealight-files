from tealight.net import *
from tealight.art import *
from math import *
import github.minghsien.art.rotation
acceleration = 3

vx = x
vy = y
forwarda = 0 
decelerate = False
def handle_keydown(key):
  if key == "up":
    forwarda += acceleration
  elif key == "down":
    forwarda -= acceleration
def handle_keyup(key):
  if key == "up":
    decelerate = True

def handle_frame():
  if decelerate == True:
    forwarda -= 3
  if forwarda > 60:
    forwarda = 60
  color("white")
  vx = forwarda*cos(theta)
  vy = forwarda*sin(theta)
  x += vx 
  y += yx